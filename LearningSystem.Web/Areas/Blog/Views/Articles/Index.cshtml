@model ArticlePageListingViewModel

@{
    ViewData["Title"] = "Blog Articles";
}

<h1 class="d-flex flex-wrap justify-content-between align-items-center">
    Articles
    @if (User.IsInRole(WebConstants.BlogAuthorRole))
    {
        <a asp-action="Create" class="btn btn-outline-success">Publish article</a>
    }
</h1>

<section class="card-deck d-flex flex-wrap">
    @foreach (var article in Model.Articles)
    {
        <a class="article-card-link d-flex col-sm-6 col-lg-4 col-xl-3 text-decoration-none"
           asp-action="Details" asp-route-id="@article.Article.Id" asp-route-title="@article.Article.Title.ToFriendlyUrl()">
            <div class="article-card card border-success m-2">
                <div class="card-body">
                    <h4 class="card-title">@article.Article.Title</h4>
                    <h6 class="card-subtitle mb-2">@article.Author</h6>
                    <p class="card-text text-muted">@article.Article.PublishDate.ToLocalTime()</p>
                </div>
                <div class="card-footer">@article.Author</div>
            </div>
        </a>
    }
</section>

<partial name="_PaginationPartial" for="Pagination" />