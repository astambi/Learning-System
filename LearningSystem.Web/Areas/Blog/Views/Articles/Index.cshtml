@model ArticlePageListingViewModel

@{
    ViewData["Title"] = "Blog Articles";
}

<h1 class="d-flex flex-wrap justify-content-between align-items-center">
    Articles
    @if (User.IsInRole(WebConstants.BlogAuthorRole))
    {
        <a asp-action="Create" class="btn btn-outline-success">Publish article</a>
    }
</h1>

<section class="card-deck">
    @foreach (var article in Model.Articles)
    {
        <a class="article-card-link d-block col-md-4 text-decoration-none" asp-action="Details" asp-route-id="@article.Article.Id">
            <div class="card border-success shadow m-2">
                <div class="card-body">
                    <h4 class="card-title">@article.Article.Title</h4>
                    <h6 class="card-subtitle mb-2 text-muted">@article.Author</h6>
                    <p class="card-text text-muted">@article.Article.PublishDate.ToLocalTime()</p>
                </div>
            </div>
        </a>
    }
</section>

<partial name="_PaginationPartial" for="Pagination" />