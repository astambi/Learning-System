@model AdminUserRoleFormModel

<form asp-action="@nameof(UsersController.RoleAddRemoveAsync)" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="UserId" hidden />
    <input asp-for="Action" hidden />
    <div class="d-flex">
        <select name="Role" asp-items="@Model.Roles" class="form-control"></select>
        @if (Model.Action == FormAction.Add)
        {
            <button type="submit" class="btn btn-outline-primary"><i class="fa fa-plus"></i></button>
        }
        else if (Model.Action == FormAction.Remove)
        {
            <button type="submit" class="btn btn-outline-danger"><i class="fa fa-minus"></i></button>
        }
    </div>
</form>

