@model CourseProfileServiceModel

<article class="card-group col-sm-6 col-md-4 col-lg-3 my-2">
    <div class="card border-info shadow-lg">
        <div class="card-header bg-info text-light border-light small d-flex flex-wrap justify-content-around">
            <div class="px-1"><i class="fa fa-hourglass-start"></i> @Model.StartDate.ToDate()</div>
            <div class="px-1"><i class="fa fa-hourglass-end"></i> @Model.EndDate.ToDate()</div>
        </div>
        <div class="card-body d-flex justify-content-center align-items-center text-center">
            <h5 class="card-title">@Model.Name</h5>
        </div>
        <div class="card-footer bg-transparent d-flex flex-wrap justify-content-around align-items-center">
            @if (Model.Grade != null)
            {
                <h5 class="card-subtitle font-weight-bold">Grade @Model.Grade</h5>
            }
            else
            {
                <h5 class="card-subtitle font-weight-light">No grade</h5>
            }
        </div>
        <div class="card-footer bg-transparent d-flex flex-wrap justify-content-around align-items-center">
            @if (Model.CertificateId != null)
            {
                @*<a asp-action="@nameof(LearningSystem.Web.Controllers.UsersController.Certificate)"
                    asp-route-id="@Model.CertificateId" class="btn btn-info border-white">View Certificate</a>*@
                <form asp-area=""
                      asp-controller="@WebConstants.UsersController"
                      asp-action="@nameof(LearningSystem.Web.Controllers.UsersController.DownloadCertificate)"
                      asp-route-id="@Model.CertificateId" method="post">
                    <partial name="_FormSubmitPartial" model="FormActionEnum.Certificate" />
                </form>
            }
            <a asp-controller="@WebConstants.CoursesController"
               asp-action="@nameof(LearningSystem.Web.Controllers.CoursesController.Details)"
               asp-route-id="@Model.Id"
               asp-route-name="@Model.Name.ToFriendlyUrl()" class="btn btn-outline-info">
                <i class="fa fa-info"></i>
            </a>
        </div>
    </div>
</article>