@model CourseProfileServiceModel

@if (Model != null)
{
    <article class="card-group col-sm-6 col-md-4 col-lg-3 my-2">
        <div class="card border-info shadow-lg">
            <div class="card-header bg-info text-light border-light small d-flex flex-wrap justify-content-around">
                <div class="px-1"><i class="fa fa-hourglass-start"></i> @Model.CourseStartDate.ToDate()</div>
                <div class="px-1"><i class="fa fa-hourglass-end"></i> @Model.CourseEndDate.ToDate()</div>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center text-center">
                <h5 class="card-title">@Model.CourseName</h5>
            </div>
            <div class="card-footer bg-transparent text-center">
                <partial name="_CertificateDownloadFormPartial" for="CertificateId" />

                @if (Model.Grade != null)
                {
                    <h5 class="card-subtitle font-weight-bold">Grade @Model.Grade</h5>
                }
                else
                {
                    <h5 class="card-subtitle font-weight-light">No grade</h5>
                }
            </div>
            <div class="card-footer bg-transparent d-flex flex-wrap justify-content-around align-items-center">
                @{
                    var courseModel = new CourseBasicViewModel { Id = Model.CourseId, Name = Model.CourseName };
                }
                <partial name="_CourseInfoButtonPartial" model="@courseModel" />
                <partial name="_StudentCourseExamsButtonPartial" for="CourseId" />
            </div>
        </div>
    </article>
}