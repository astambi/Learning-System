@model int

<form method="post" enctype="multipart/form-data"
      asp-action="@nameof(LearningSystem.Web.Controllers.CoursesController.UploadExam)"
      asp-route-id="@Model">
    <p>
        Upload exam (.@DataConstants.FileType only, max size @DataConstants.FileMaxLengthInMb MB):
    </p>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group d-flex justify-content-ar align-items-center">
        <input name="examFile" type="file" accept=".@DataConstants.FileType" class="form-control-file mr-2" required />
        <partial name="_FormSubmitPartial" model="FormActionEnum.Upload" />
    </div>
</form>

@section Scripts {<partial name="_ValidationScriptsPartial" />}