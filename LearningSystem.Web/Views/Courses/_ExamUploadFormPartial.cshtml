@model int

<form method="post" enctype="multipart/form-data"
      asp-action="@nameof(LearningSystem.Web.Controllers.CoursesController.UploadExam)"
      asp-route-id="@Model">
    <p>Upload exam (max size @DataConstants.FileMaxLengthInMb MB, .@FileType.Zip.ToString().ToUpper() only):</p>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group d-flex justify-content-ar align-items-center">
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="customFile"
                   name="examFile" accept=".@FileType.Zip" required>
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
        <div class="form-group m-0 ml-1">
            <button type="submit" class="btn btn-@FormActionEnum.Upload.ToStyle()"><i class="fa fa-upload"></i></button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @* Custom File Upload form script => Details.cshtml & site.js *@
}