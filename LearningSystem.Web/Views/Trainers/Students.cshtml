@model StudentCourseGradeViewModel
@{
    ViewData["Title"] = "Students";
    var courseHasEnded = Model.Course.EndDate < DateTime.UtcNow;
}

<h1>Course</h1>
<partial name="_CourseCardPartial" for="Course" />

<h1>Students</h1>
<table class="table">
    <thead>
        <tr class="align-bottom">
            <th>Student</th>
            <th>Username</th>
            <th>Email</th>
            @if (courseHasEnded)
            {
                <th>Exam</th>
                <th>Grade</th>
                <th>Assessment</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.StudentName</td>
                <td>@student.StudentUserName</td>
                <td>@student.StudentEmail</td>

                @if (courseHasEnded)
                {
                    <td>
                        @if (student.HasExamSubmission)
                        {
                            <a asp-action="@nameof(TrainersController.DownloadExam)"
                               asp-route-id="@Model.Course.Id"
                               asp-route-studentId="@student.StudentId"
                               class="btn btn-@StyleHelpers.ToStyle(FormActionEnum.Download)"><i class="fa fa-download"></i></a>
                        }
                        else
                        {
                            <i class="fa fa-user-slash"></i>
                        }
                    </td>
                    <td>@student.Grade</td>
                    <td>
                        @if (student.HasExamSubmission)
                        {
                            var formModel = new StudentCourseGradeFormModel
                            {
                                CourseId = Model.Course.Id,
                                StudentId = student.StudentId,
                                Grade = student.Grade
                            };
                            <partial name="_GradeFormPartial" model="@formModel" />
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<small>@WebConstants.TrainersAssessPerformanceAfterCourseEndsMsg</small>
