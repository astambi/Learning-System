@model OrderListingServiceModel
@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete order</h1>

<partial name="_OrderPartial" model="Model" />

<h5>Are you sure you want to delete this order?</h5>
<p>
    You would be <strong>unsubscribed</strong> from all courses and would <strong>loose access to all course materials</strong>.
</p>

<div class="d-flex justify-content-between">
    <a asp-action="@nameof(OrdersController.Index)" class="btn btn-outline-info">Back to Orders</a>
    <form asp-action="@nameof(OrdersController.ConfirmDelete)"
          asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-outline-danger">Confirm delete</button>
    </form>
</div>
