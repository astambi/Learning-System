@model IEnumerable<OrderListingServiceModel>
@{
    ViewData["Title"] = "My Orders";
}

<h1>My orders</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order date</th>
                <th>Payment total</th>
                <th>Payment method</th>
                <th>Status</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                var orderSelector = $"order-{order.Id}";
                <tr>
                    <td>@order.OrderDate.ToLocalTime()</td>
                    <td>@order.TotalPrice.ToCurrency()</td>
                    <td>@order.PaymentMethod.ToFriendlyName()</td>
                    <td>@order.Status </td>
                    <td>
                        <button id=@orderSelector class="btn btn-outline-info order-details-toggler">
                            Items @order.OrderItems.Count()
                        </button>
                        <partial name="_OrderDeleteButtonPartial" model="order.Id" />
                    </td>
                </tr>
                @foreach (var item in order.OrderItems)
                {
                    var courseModel = new CourseBasicViewModel { Id = item.CourseId, Name = item.CourseName };
                    <tr class="order-item @orderSelector table-light shadow">
                        <td></td>
                        <td>@item.Price.ToCurrency()</td>
                        <td colspan="2">@item.CourseName</td>
                        <td><partial name="_CourseDetailsButtonPartial" model="courseModel" /></td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <h5>No orders</h5>
}
