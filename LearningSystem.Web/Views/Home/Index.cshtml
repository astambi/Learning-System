@model CoursePageListingViewModel

@{
    ViewData["Title"] = "Home Page";
}

<partial name="_WelcomePartial" />

<section>
    <h1>Courses</h1>
    <section class="d-flex flex-wrap">
        @foreach (var course in Model.Courses)
        {
            <partial name="_CourseCardPartial" model="course" />
        }
    </section>
    <partial name="_PaginationPartial" for="Pagination" />
</section>
