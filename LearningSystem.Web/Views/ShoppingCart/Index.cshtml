@model IEnumerable<CartItemDetailsServiceModel>
@{
    ViewData["Title"] = "Shopping Cart";
}

<h1>Shopping cart</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Course</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name - @item.StartDate.ToDateString()
                    </td>
                    <td class="text-right">@item.Price.ToCurrency()</td>
                    <td class="d-flex justify-content-around">
                        <a asp-controller="@WebConstants.CoursesController"
                           asp-action="@nameof(LearningSystem.Web.Controllers.CoursesController.Details)"
                           asp-route-id="@item.Id" class="btn btn-outline-info">
                            <i class="fa fa-info"></i>
                        </a>
                        <a asp-action="@nameof(ShoppingCartController.Remove)"
                           asp-route-id="@item.Id" class="btn btn-outline-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="font-weight-bold">
                <td>Total: </td>
                <td class="text-right">@Model.Sum(c => c.Price).ToCurrency()</td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <div class="d-flex justify-content-between">
        <a asp-controller="@WebConstants.CoursesController"
           asp-action="@nameof(LearningSystem.Web.Controllers.CoursesController.Index)"
           class="btn btn-outline-info">
            <i class="fa fa-angle-double-left"></i>
            Add more courses
        </a>

        @if (User.Identity.IsAuthenticated)
        {
            <form method="post" asp-action="Checkout">
                <button type="submit" class="btn btn-outline-success">
                    Checkout
                </button>
            </form>
        }
        else
        {
            <a asp-area="Identity" asp-page="/Account/Login"
               asp-route-returnUrl="@Url.Action(nameof(ShoppingCartController.Index), WebConstants.ShoppingCartController)"
               class="btn btn-outline-info">
                Login to finalize order
                <i class="fa fa-angle-double-right"></i>
            </a>
        }
    </div>
}
else
{
    <h5>No items in cart</h5>
}
