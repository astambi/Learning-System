@model ResourceFormModel

@if (Model != null)
{
<form asp-controller="@WebConstants.ResourcesController"
      asp-action="@nameof(ResourcesController.Delete)"
      asp-route-id="@Model.Id" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden name="@nameof(Model.Id)" value="@Model.Id" />
    <input hidden name="@nameof(Model.CourseId)" value="@Model.CourseId" />
    <button type="submit" class="btn btn-@FormActionEnum.Delete.ToStyle() mx-1"><i class="fa fa-trash"></i></button>
</form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
