@model int

@{
    var action = FormActionEnum.Enroll.ToString();
    var style = WebConstants.Styles[action];
}

<form method="post" class="bg-transparent border border-white"
      asp-controller="@WebConstants.CoursesController"
      asp-action="@nameof(LearningSystem.Web.Controllers.CoursesController.Enroll)"
      asp-route-id="@Model">
    <button type="submit" class="btn btn-@style">@action</button>
</form>
