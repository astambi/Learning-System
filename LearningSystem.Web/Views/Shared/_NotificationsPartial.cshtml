@foreach (var tempDataKvp in TempData)
{
    var notificationType = tempDataKvp.Key;
    var notificationMsg = TempData[notificationType];
    var cssStyle = WebConstants.Styles[notificationType];

    if (notificationMsg != null)
    {
        <div class="alert alert-@cssStyle alert-dismissible fade show shadow" role="alert" data-dismiss="alert" aria-hidden="true">
            @notificationMsg
        </div>
    }
}