@model CourseServiceModel

<article class="card-group col-sm-6 col-lg-4 col-xl-3 my-2">
    <div class="card border-info shadow-lg">
        <div class="card-header bg-info text-light border-light small d-flex flex-wrap justify-content-between">
            <div><i class="fa fa-clock"></i> @Model.StartDate.ToDate()</div>
            <div><i class="fa fa-hourglass"></i> @Model.Duration.ToDays()</div>
        </div>
        <div class="card-body">
            <div class="text-center">
                <img src="https://s3-ap-south-1.amazonaws.com/icegateinstitute/wp-content/uploads/2018/11/27054729/GATE-Crash-Course.jpg" alt="Alternate Text" height="150" class="mw-100" />
            </div>
        </div>
        <div class="card-body d-flex justify-content-center align-items-center">
            <h5 class="card-title text-center">@Model.Name</h5>
        </div>
        @if (Model.TrainerName != null)
        {
            <ul class="list-group">
                <li class="list-group-item">Trainer: @Model.TrainerName</li>
            </ul>
        }
        <div class="card-footer bg-transparent d-flex flex-wrap justify-content-around align-items-center">
            <a class="btn btn-outline-info"
               asp-controller="@WebConstants.CoursesController"
               asp-action="@nameof(LearningSystem.Web.Controllers.CoursesController.Details)"
               asp-route-id="@Model.Id"
               asp-route-name="@Model.Name.ToFriendlyUrl()">Details</a>

            @if (Model.CanEnroll)
            {
                <partial name="_CourseEnrollFormPartial" for="Id" />
            }

            @if (User.IsInRole(WebConstants.TrainerRole))
            {
                <a asp-controller="@WebConstants.TrainersController"
                   asp-action="@nameof(TrainersController.Students)"
                   asp-route-id="@Model.Id" class="btn btn-outline-info">Students</a>
            }

            <partial name="_AdminCourseActionsPartial" for="Id" />
        </div>
    </div>
</article>
