@model int

@if (User.IsInRole(WebConstants.AdministratorRole))
{
    <a asp-area="@WebConstants.AdminArea"
       asp-controller="@WebConstants.CoursesController"
       asp-action="@nameof(LearningSystem.Web.Areas.Admin.Controllers.CoursesController.Edit)"
       asp-route-id="@Model"
       class="btn btn-outline-@WebConstants.Styles[FormActionEnum.Edit.ToString()]">@FormActionEnum.Edit</a>

    <a asp-area="@WebConstants.AdminArea"
       asp-controller="@WebConstants.CoursesController"
       asp-action="@nameof(LearningSystem.Web.Areas.Admin.Controllers.CoursesController.Delete)"
       asp-route-id="@Model"
       class="btn btn-outline-@WebConstants.Styles[FormActionEnum.Delete.ToString()]">@FormActionEnum.Delete</a>
}